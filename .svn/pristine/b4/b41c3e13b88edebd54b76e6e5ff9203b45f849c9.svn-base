package org.ip.sesion02;

public class CodigoDefectuoso {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		/*
		 * 1. En un conocido centro comercial de la ciudad se han detectado unos
		 * defectos en aquellos artículo cuyos códigos se encuentran entre los
		 * aquí expuestos: Del 14681 al 15681 Del 70001 al 79999 Del 99999 al
		 * 110110 Implemente un programa que a partir del código de un artículo,
		 * muestre un mensaje indicado si el artículo es o no defectuoso.
		 * (CodigoDefectuoso)
		 */

		int codigo = 70000;

		if ((codigo >= 14681) && (codigo <= 15681) || (codigo >= 70001)
				&& (codigo <= 79999) || (codigo >= 99999) && (codigo <= 110110)) {
			System.out.println("El código " + codigo
					+ " corresponde a un articulo SI DEFECTUOSO");
		} else {
			System.out.print("El código " + codigo
					+ " corresponde a un articulo NO DEFECTUOSO");
		}

	}
}
